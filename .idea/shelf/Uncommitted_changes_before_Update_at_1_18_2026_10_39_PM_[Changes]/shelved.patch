+name: CI Pipeline
+​
+ on:
+   push:
+     branches: [ "main" ]
+   pull_request:
+     branches: [ "main" ]
+​
+ jobs:
+   build-and-test:
+     runs-on: ubuntu-latest
+     steps:
+       - name: Checkout Code
+         uses: actions/checkout@v4
+​
+       - name: Set up JDK 21
+         uses: actions/setup-java@v4
+         with:
+           java-version: '21'
+           distribution: 'temurin'
+           cache: maven
+​
+       - name: Build with Maven (Runs Tests)
+         run: mvn clean install -DskipTests=false
+         # This automatically runs:
+         # 1. Unit tests
+         # 2. The database-service migration validation (via Testcontainers/Plugin)
+​
+       - name: Validate Docker Builds
+         run: |
+           # We build the images to ensure Dockerfiles are valid and JARs are correct.
+           # We do NOT push them in this CI step (that's for CD).
+           
+           echo "Building Storage Service..."
+           docker build -t test-storage-service --build-arg JAR_FILE=storage-service/target/storage-service-0.0.1-SNAPSHOT.jar -f storage-service/Dockerfile .
+           
+           echo "Building Configuration Service..."
+           docker build -t test-configuration-service --build-arg JAR_FILE=configuration-service/target/configuration-service-0.0.1-SNAPSHOT.jar -f configuration-service/Dockerfile .
+           
+           echo "Building Enricher Service..."
+           docker build -t test-enricher-service --build-arg JAR_FILE=enricher-service/target/enricher-service-0.0.1-SNAPSHOT.jar -f enricher-service/Dockerfile .
+           
+           echo "Building KSQL Service..."
+           docker build -t test-ksql-service --build-arg JAR_FILE=ksql-service/target/ksql-service-0.0.1-SNAPSHOT.jar -f ksql-service/Dockerfile .
